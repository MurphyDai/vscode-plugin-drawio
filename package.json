{
  "name": "vscode-plugin-drawio",
  "displayName": "drawio",
  "description": "using draw.io in markdown",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "keywords": [
    "markdown",
    "draw",
    "svg",
    "mind",
    "flow",
    "visio",
    "mermaid"
  ],
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.drawio"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.drawio",
        "title": "Drawio Markdown"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "drawio configrations",
      "properties": {
        "drawio.assetsDirName": {
          "type": "string",
          "default": "drawio_assets",
          "description": "drawio save svg file path name"
        },
        "drawio.offline": {
          "type": "boolean",
          "default": true,
          "description": "using offline mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "typescript": "^3.1.4",
    "vscode": "^1.1.25"
  },
  "dependencies": {
    "chrome-debugging-client": "^0.6.8"
  }
}
